{
  "name": "@acme/db",
  "private": true,
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "db:generate": "pnpm with-env zenstack generate",
    "db:push": "pnpm with-env prisma db push --skip-generate  --accept-data-loss",
    "studio": "pnpm with-env prisma studio --port 5556",
    "zi": "zenstack init",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check \"**/*.{mjs,ts,json}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,json}\"",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env.local --"
  },
  "dependencies": {
    "@prisma/client": "5.2.0",
    "@zenstackhq/runtime": "^1.0.0-beta.20",
    "@zenstackhq/server": "^1.0.0-beta.20",
    "@zenstackhq/tanstack-query": "^1.0.0-beta.20",
    "nanoid": "^4.0.2"
  },
  "devDependencies": {
    "@acme/eslint-config": "0.2.0",
    "@acme/prettier-config": "0.1.0",
    "@acme/tsconfig": "0.1.0",
    "@zenstackhq/swr": "^1.0.0-beta.20",
    "@zenstackhq/trpc": "^1.0.0-beta.20",
    "dotenv-cli": "^7.3.0",
    "prisma": "^5.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.2.2",
    "zenstack": "^1.0.0-beta.20"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@acme/eslint-config/base",
      "@acme/eslint-config/react"
    ]
  },
  "prettier": "@acme/prettier-config",
  "exports": {
    ".": "./src/index.ts"
  }
}
